        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;Component/Styles/Accents/BaseLight.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="ListScrollViewerStyle2" TargetType="ScrollViewer">
        <Setter Property="Height" Value="Auto"></Setter>
        <Setter Property="Background" Value="#FFF3D0AC"></Setter>
    </Style>
    <BitmapImage 
                x:Key="searchImageSource"
                CreateOptions="IgnoreImageCache" 
                CacheOption="OnLoad" 
                UriSource="/UpdateClient;component/Image/search_btn.png" />
    <BitmapImage 
                x:Key="imagefinish"
                CreateOptions="IgnoreImageCache" 
                CacheOption="OnLoad" 
                UriSource="/UpdateClient;component/Image/finish.png" />
    <BitmapImage 
                x:Key="imagenoconnect"
                CreateOptions="IgnoreImageCache" 
                CacheOption="OnLoad" 
                UriSource="/UpdateClient;component/Image/noconnect.png" />
    <BitmapImage 
                x:Key="imagerenounce"
                CreateOptions="IgnoreImageCache" 
                CacheOption="OnLoad" 
                UriSource="/UpdateClient;component/Image/renounce.png" />

    <BitmapImage 
                x:Key="imageupdateClient"
                CreateOptions="IgnoreImageCache" 
                CacheOption="OnLoad" 
                UriSource="/UpdateClient;component/Image/updateClient.png" />

    <BitmapImage 
                x:Key="imageMessage"
                CreateOptions="IgnoreImageCache" 
                CacheOption="OnLoad" 
                UriSource="pack://application:,,,/UpdateClient;component/Image/start_notice.png" />

    <converters:BoolToVisibilityConverter  x:Key ="BoolToVisibilityConverter"></converters:BoolToVisibilityConverter >
    <SolidColorBrush x:Key="TextBlockForeground" Color="#FF999999"/>
    <SolidColorBrush x:Key="CommonBackground" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="CommonForeground" Color="#A5A5A5"/>
    <SolidColorBrush x:Key="CommonBorderBrush" Color="#FFE4E4E4"/>
