                </Grid>

            </Border>
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <Image    Height="124"  Source="{StaticResource imageMessage}" Width="124"/>
                <TextBlock  Margin="20" Style="{StaticResource CommonTextStyle}" Text="有新的版本，请问是否立即更新？" />

            </StackPanel>
            <Border Grid.Row="2" BorderThickness="1" BorderBrush="{StaticResource CommonBorderBrush}" >
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="450"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Style="{StaticResource CommonButtonStyle}" Content="是（Y）" Click="Button_Click" Tag="true" Margin="5" HorizontalAlignment="Right"  Height="45"  Width="119"/>
                    <Button Style="{StaticResource CommonButtonStyle}" Grid.Column="1" Click="Button_Click" Tag="false" Margin="5" Content="否（N）" Height="45"  Width="119"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
