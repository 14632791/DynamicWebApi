             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Metro.DynamicModeules.BaseControls.ControlEx"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
