@model UpdateSystem.Model.RoleModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>新增角色</title>
    <link rel="stylesheet" type="text/css" href="~/Content/system/commonx.css">

</head>
<body>
<div class="common_fieldset_outlayer">
    @using (Html.BeginForm("Save", "Role"))
    {
                @*@Html.Partial("_ViewToken")*@
        <table class="two_colspan_table" cellpadding="0" cellspacing="0">
            @Html.HiddenFor(model => model.RlId)
            <tr>
                <td class="left">
                    <span style="color: red;">*</span>角色名称：
                </td>
                <td class="right">
                    @Html.TextBoxFor(model => model.Name, new {@style = "width:50%;", @maxlength = "20"})
                    @Html.ValidationMessageFor(model => model.Name)
                    @Html.Hidden("EditName", Model.Name)
                </td>
            </tr>
            <tr>
                <td class="left">
                    备注：
                </td>
                <td class="right">
                    @Html.TextAreaFor(model => model.Remark, new {@style = "width:95%;", @maxlength = "200", @row = "5"})
                    @Html.ValidationMessageFor(model => model.Remark)
                </td>
            </tr>
        </table>
        <div class="common_button_layer">
            <input id="sbAdd" type="submit" value="添加" class="common_btn"/>
            <input id="Rs" type="reset" class="common_btn" value="重置"/>
            <input id="btnCancle" type="button" value="取消" class="common_btn" onclick="top.closeDialog.closeDialog();"/>
        </div>
    }
</div>
</body>
</html>
@Scripts.Render("~/bundles/jqueryval")



